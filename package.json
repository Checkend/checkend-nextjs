{
  "name": "@checkend/nextjs",
  "version": "0.1.0",
  "description": "Next.js SDK for Checkend error monitoring",
  "author": "Simon Chiu <checkend@furvur.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Checkend/checkend-nextjs.git"
  },
  "homepage": "https://github.com/Checkend/checkend-nextjs",
  "bugs": {
    "url": "https://github.com/Checkend/checkend-nextjs/issues"
  },
  "keywords": [
    "error",
    "monitoring",
    "tracking",
    "checkend",
    "nextjs",
    "next",
    "react",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./client": {
      "import": {
        "types": "./dist/client.d.ts",
        "default": "./dist/client.js"
      },
      "require": {
        "types": "./dist/client.d.cts",
        "default": "./dist/client.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      },
      "require": {
        "types": "./dist/server.d.cts",
        "default": "./dist/server.cjs"
      }
    },
    "./edge": {
      "import": {
        "types": "./dist/edge.d.ts",
        "default": "./dist/edge.js"
      },
      "require": {
        "types": "./dist/edge.d.cts",
        "default": "./dist/edge.cjs"
      }
    },
    "./testing": {
      "import": {
        "types": "./dist/testing.d.ts",
        "default": "./dist/testing.js"
      },
      "require": {
        "types": "./dist/testing.d.cts",
        "default": "./dist/testing.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src test --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepare": "husky || true",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@checkend/browser": "file:../checkend-browser",
    "@checkend/node": "file:../checkend-node"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0 || ^19.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "next": "^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
